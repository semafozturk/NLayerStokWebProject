@using Nlayer.Core.DTOs
@model ProductDto
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<div class="row">

    <div  class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Products">
            <input type="hidden" asp-for="productId" />
            <div class="form-group">
                <label asp-for="productName"></label>
                <input asp-for="productName" class="form-control" />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="purchasePrice"></label>
                <input asp-for="purchasePrice" class="form-control" />
                <span asp-validation-for="purchasePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="salePrice"></label>
                <input asp-for="salePrice" class="form-control" />
                <span asp-validation-for="salePrice" class="text-danger"></span>
            </div>


              <div class="form-group">
                <label asp-for="stock"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>


               <div class="form-group">
                <label asp-for="categoryId"></label>
                <select asp-for="categoryId" asp-items="ViewBag.categories" class="form-control" ></select>
               
            </div>

            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>

